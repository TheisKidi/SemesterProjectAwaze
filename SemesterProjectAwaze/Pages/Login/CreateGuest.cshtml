@page
@model SemesterProjectAwaze.Pages.Login.CreateGuestModel
@{
}

<div class="navbar-container">
    <h1 style="font-family: Poppins; font-size: 50px; padding-top: 50px; padding-bottom: 50px;">Udlej dit sommerhus</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label>Fornavn</label>
                <input asp-for="@Model.FirstName" class="form-control" /><br />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Efternavn</label>
                <input asp-for="@Model.LastName" class="form-control" /><br />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="@Model.Email" class="form-control" /><br />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Telefon nr.</label>
                <input asp-for="@Model.Phone" class="form-control" /><br />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="@Model.Password" class="form-control" type="password"/><br />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Bekræft Password</label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" /><br />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Opret Gæste Profil" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
