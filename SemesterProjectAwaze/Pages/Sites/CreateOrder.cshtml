@page
@model SemesterProjectAwaze.Pages.Sites.CreateOrderModel
@{
}
<h2>Create an order</h2>

<form method="post">
    <div class="form-group create">
        <label>Kortnummer</label>
        <input asp-for="@Model.CardNumber" class="form-control" /><br />
        <span asp-validation-for="@Model.CardNumber" class="text-danger"></span>
    </div>
    <div class="form-group create">
        <label>Kontrolcifre</label>
        <input asp-for="@Model.Cvc" class="form-control" /><br />
        <span asp-validation-for="@Model.Cvc" class="text-danger"></span>
    </div>
    <div class="form-group create">
        <label>Udløbsdato</label>
        <input asp-for="@Model.Month" class="form-control" /><br />
        <span asp-validation-for="@Model.Month" class="text-danger"></span>
        <input asp-for="@Model.Year" class="form-control" /><br />
        <span asp-validation-for="@Model.Year" class="text-danger"></span>
    </div>
</form>